<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Launcher"
    android:id="@+id/clLayout"
    android:background="@drawable/main_background">

    <ru.biozzlab.mylauncher.ui.layouts.DragLayer
        android:id="@+id/dragLayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1">

        <ru.biozzlab.mylauncher.ui.layouts.Workspace
            android:id="@+id/workspaceView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/hotSeat"
            app:layout_constraintBottom_toTopOf="@id/ivPageIndicator"
            app:layout_constraintHorizontal_weight="7"
            app:defaultPage="@integer/workspace_default_page">

            <include
                android:id="@+id/cell1"
                layout="@layout/item_cell" />

            <include
                android:id="@+id/cell2"
                layout="@layout/item_cell" />

            <include
                android:id="@+id/cell3"
                layout="@layout/item_cell" />

            <include
                android:id="@+id/cell4"
                layout="@layout/item_cell" />

            <include
                android:id="@+id/cell5"
                layout="@layout/item_cell" />

        </ru.biozzlab.mylauncher.ui.layouts.Workspace>

        <ImageView
            android:id="@+id/ivPageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/hotSeat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            android:src="@drawable/scroll_indicator"
            android:scaleType="fitXY"/>

        <include
            android:id="@+id/hotSeat"
            layout="@layout/item_hotseat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/workspaceView"
            app:layout_constraintHorizontal_weight="1"/>


        <include
            layout="@layout/item_delete_region"
            android:id="@+id/deleteRegion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>

    </ru.biozzlab.mylauncher.ui.layouts.DragLayer>

    <ProgressBar
        android:id="@+id/pbWorkspaceInit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>